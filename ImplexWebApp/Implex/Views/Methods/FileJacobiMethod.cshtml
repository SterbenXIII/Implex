@model JacobiMethod

@{
    ViewBag.Title = @Model.Name;
}

<partial name="_MethodDescriptionPartial" />

<div class="row text-center my-2">
    <div class="col-sm">
        <p>Use forms in order to input your data and calculate result?</p>
    </div>
    <div class="col-sm">
        <a type="button" class="btn btn-secondary" asp-controller="Methods" asp-action="FormJacobiMethod">Use Forms</a>
    </div>
</div>
<div class="my-4 mx-5">
    <form asp-action="FileJacobiMethod" method="post" enctype="multipart/form-data">
        <div class="row text-center">
            <div class="form-group col-sm">
                <label for="matrixA">MatrixA:</label>
                <input type="file" id="matrixA" name="matrix" class="form-control-file border" accept="text/plain">
            </div>
            <div class="form-group col-sm">
                <label for="eps">Eps:</label>
                <input class="form-control" type="text" id="eps" asp-for="Eps" />
            </div>
        </div>
        <div class="row m-4">
            <input type="submit" value="Calculate" class="btn btn-secondary" id="btn" />
        </div>
    </form>
</div>
